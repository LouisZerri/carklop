{% extends 'base.html.twig' %}

{% block body %}

	{% include 'layouts/navbar.html.twig' %}

	<main class="min-h-screen flex items-center justify-center px-6 py-8 bg-gray-50">
		<div class="min-h-screen bg-gray-50 flex items-center justify-center px-4 py-8">
			<div class="w-full max-w-xl bg-white p-6 sm:p-8 rounded-xl shadow-lg">
				<div class="text-center mb-6">
					<h2 class="text-3xl font-extrabold text-gray-900">Inscription</h2>
					<p class="mt-2 text-sm text-gray-600">
						Créez votre compte pour commencer à covoiturer
					</p>
				</div>

				<div class="mb-6 bg-yellow-100 border-l-4 border-yellow-500 text-yellow-700 p-4 rounded">
					<p class="font-semibold">⚠️ Informations importantes</p>
					<ul class="list-disc list-inside text-sm mt-2 space-y-1">
						<li>Utilisez vos
							<strong>véritables informations</strong>.</li>
						<li>Une
							<strong>vérification d'identité</strong>
							est requise.</li>
						<li>L’inscription est
							<strong>réservée aux 18 ans et plus</strong>.</li>
					</ul>
				</div>

				<form
					method="post" action="{{ path('app_register') }}" class="space-y-6">
					<!-- Prénom / Nom -->
					<div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
						<div>
							<label for="firstName" class="block text-sm font-medium text-gray-700">Prénom</label>
							<input type="text" id="firstName" name="firstName" required class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-[#e67e22]"/>
						</div>
						<div>
							<label for="lastName" class="block text-sm font-medium text-gray-700">Nom</label>
							<input type="text" id="lastName" name="lastName" required class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-[#e67e22]"/>
						</div>
					</div>

					<!-- Téléphone / Date -->
					<div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
						<div>
							<label for="tel" class="block text-sm font-medium text-gray-700">Téléphone</label>
							<input type="text" id="tel" name="tel" required class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-[#e67e22]"/>
						</div>
						<div>
							<label for="dateOfBirth" class="block text-sm font-medium text-gray-700">Date de naissance</label>
							<input type="date" id="dateOfBirth" name="dateOfBirth" required class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-[#e67e22]"/>
						</div>
					</div>

					<!-- Email -->
					<div>
						<label for="email" class="block text-sm font-medium text-gray-700">Email</label>
						<input type="email" id="email" name="email" required class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-[#e67e22]"/>
					</div>

					<!-- Mot de passe -->
					<div>
						<label for="password" class="block text-sm font-medium text-gray-700">Mot de passe</label>
						<input type="password" id="password" name="password" required class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-[#e67e22]"/>

						<ul class="text-xs mt-1 space-y-1 text-gray-600" id="password-rules">
							<li data-check="length" class="text-gray-500">❌ 8 caractères minimum</li>
							<li data-check="uppercase" class="text-gray-500">❌ Une majuscule</li>
							<li data-check="digit" class="text-gray-500">❌ Un chiffre</li>
							<li data-check="special" class="text-gray-500">❌ Un caractère spécial</li>
						</ul>

					</div>

					<!-- Confirmer mot de passe -->
					<div>
						<label for="confirmPassword" class="block text-sm font-medium text-gray-700">Confirmer le mot de passe</label>
						<input type="password" id="confirmPassword" name="confirmPassword" required class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-[#e67e22]"/>
					</div>

					<!-- Case: usage personnel -->
					<div class="flex items-start gap-2 text-sm text-gray-700">
						<input type="checkbox" id="isPersonalUseConfirmed" name="isPersonalUseConfirmed" required class="mt-1"/>
						<label for="isPersonalUseConfirmed">
							Je suis bien un particulier et j’utilise le service Carklop pour mon compte personnel.
						</label>
					</div>

					<!-- Case: CGU -->
					<div class="flex items-start gap-2 text-sm text-gray-700">
						<input type="checkbox" id="isTermsAccepted" name="isTermsAccepted" required class="mt-1"/>
						<label for="isTermsAccepted">
							J’ai lu et j’accepte les
							<a href="/cgu" target="_blank" class="text-[#e67e22] underline">Conditions Générales d’Utilisation</a>
							et la
							<a href="/confidentialite" target="_blank" class="text-[#e67e22] underline">Politique de Confidentialité</a>.
						</label>
					</div>

					<!-- Bouton -->
					<button type="submit" class="w-full flex justify-center gap-2 px-4 py-2 rounded-md shadow-sm text-white bg-[#e67e22] hover:bg-orange-600 transition-colors">
						<i class="fa-solid fa-user-plus translate-y-[4px]"></i>
						S'inscrire
					</button>


					<div class="text-center text-sm text-gray-600">
						Déjà inscrit ?
						<a href="{{ path('app_login') }}" class="text-[#e67e22] hover:underline">Se connecter</a>
					</div>
				</form>
			</div>
		</div>
	</main>

	{% include 'layouts/footer.html.twig' %}


{% endblock %}
