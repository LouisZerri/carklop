{% extends 'base.html.twig' %}

{% block body %}

	{% include 'layouts/navbar.html.twig' %}

	<main class="min-h-[85vh] flex items-center justify-center bg-gray-50 px-4 pt-8">
		<div class="w-full max-w-md bg-white shadow-lg rounded-2xl p-6 sm:p-8">
			<h1 class="text-2xl sm:text-3xl font-bold mb-6 text-center text-gray-800">Mot de passe oublié</h1>

			<p class="text-sm text-gray-600 text-center mb-4">
				Saisissez votre adresse email pour recevoir un lien de réinitialisation.
			</p>

			<form method="post" action="{{ path('app_forgotpassword') }}" class="flex flex-col gap-4">
				<input type="email" name="email" required placeholder="Votre email" class="border border-gray-300 px-4 py-2 rounded-md shadow-sm focus:ring-[#e67e22] focus:border-[#e67e22] transition"/>

				<button type="submit" class="bg-[#e67e22] text-white px-4 py-2 rounded-md hover:bg-orange-600 transition-colors font-semibold">
					Envoyer le lien de réinitialisation
				</button>
			</form>
		</div>
	</main>


{% endblock %}
